@page
@model LoginModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: linear-gradient(135deg, #1e1e2f, #3a3a5c);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-container {
        width: 100%;
        max-width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-box {
        width: 100%;
        max-width: 400px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    h2 {
        font-size: 1.5rem;
        color: #333333;
        font-weight: bold;
    }

    .form-label {
        font-size: 0.9rem;
        font-weight: 600;
        color: #4e73df;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ddd;
        padding: 10px;
        font-size: 0.9rem;
    }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 5px rgba(78, 115, 223, 0.5);
        }

    .btn {
        border-radius: 10px;
        background-color: #4e73df;
        color: #fff;
        font-size: 1rem;
        padding: 10px;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #375acb;
        }

</style>
<div class="login-container d-flex justify-content-center align-items-center">
    <div class="login-box p-5">
        <h2 class="text-center mb-4">ورود کاربر</h2>
        <form method="post">
            <div class="mb-3">
                <input type="text" id="username" name="Username" class="form-control" placeholder="نام کاربری خود را وارد کنید" required />
            </div>
            <div class="mb-3">
                <input type="password" id="password" name="Password" class="form-control" placeholder="رمز عبور خود را وارد کنید" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">ورود</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert">
                <h5>@Model.ErrorMessage</h5>
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert">
                لطفاً خطاهای زیر را بررسی کنید:
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>